{
  "id": "say_basic",
  "features": ["mode_say", "pony_select", "balloon_select", "anchor", "diff_runner"],
  "argv": ["ponysay"],
  "reference_argv": [
    "ponysay",
    "-f", "{workspace}/testdata/ponies/simple_say.pony",
    "-b", "{workspace}/testdata/balloons/ascii.say",
    "Hello from iron pony"
  ],
  "candidate_argv": [
    "iron-pony",
    "-f", "{workspace}/testdata/ponies/simple_say.pony",
    "-b", "{workspace}/testdata/balloons/ascii.say",
    "Hello from iron pony"
  ],
  "stdin": null,
  "env": {
    "COLUMNS": "80",
    "LINES": "24",
    "PYTHONWARNINGS": "ignore"
  }
}
